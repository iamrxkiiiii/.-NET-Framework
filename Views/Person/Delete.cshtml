@model DapperMvcDemo.Data.Models.Domain.Person

@{
    ViewData["Title"] = "Delete Person";
}

<h3 class="mt-3 text-danger">Confirm Delete</h3>

<p>Are you sure you want to delete this person?</p>

<a href="/Person/DisplayAll" class="btn btn-secondary mb-3">Back to List</a>

<form asp-action="Delete" method="post">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label class="form-label fw-bold">Name:</label>
        <div class="form-control-plaintext">@Model.Name</div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Email:</label>
        <div class="form-control-plaintext">@Model.Email</div>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Address:</label>
        <div class="form-control-plaintext">@Model.Address</div>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert alert-info">
            @TempData["msg"]
        </div>
    }

    <button type="submit" class="btn btn-danger">Yes, Delete</button>
</form>
